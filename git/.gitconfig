[init]
	defaultBranch = main
[user]
	name = Fran
	email = fcomrqz@users.noreply.github.com
[core]
	editor = micro
	pager = delta
	quotepath = false
	attributesFile = ~/Developer/fcomrqz/dotfiles/git/attributes
[blame]
	date = relative
[format]
	pretty = %C(magenta)%h%Creset %s %C(brightblack)%cr%Creset%C(red)%d%Creset
[pager]
  diff = delta
  log = delta
	reflog = delta
	show = delta
[delta]
  syntax-theme = none
	commit-style = raw
  file-style = yellow
	file-decoration-style = omit
	file-added-label = [+]
	file-copied-label = [==]
	file-modified-label = [*]
	file-removed-label = [-]
	file-renamed-label = [→]
	right-arrow  = →
  hunk-header-style = omit
	hunk-header-decoration-style = omit
	zero-style = syntax
	minus-style = red
	minus-emph-style = red
	minus-non-emph-style = brightred
	plus-style = green
	plus-emph-style = green
	plus-non-emph-style = brightgreen
  line-numbers = true
  line-numbers-zero-style = brightblack
	line-numbers-minus-style = brightred
  line-numbers-plus-style = brightgreen
	line-numbers-right-format = "{np:^4} "
	line-numbers-left-format = "{nm:^4} "
	tabs = 2
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
[pull]
  rebase = true
