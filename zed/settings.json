{
  "close_on_file_delete": true,
  "multi_cursor_modifier": "cmd_or_ctrl",
  "drag_and_drop_selection": { "enabled": false },
  "status_bar": { "active_language_button": false, "cursor_position_button": false },
  "diagnostics": { "button": true },
  "tabs": { "git_status": false },
  "features": { "edit_prediction_provider": "zed" },
  "edit_predictions": { "mode": "eager", "enabled_in_text_threads": true },
  "git": { "inline_blame": { "enabled": false } },
  "git_panel": { "button": false, "dock": "right" },
  "vertical_scroll_margin": 12.0,
  "when_closing_with_no_tabs": "keep_window_open",
  "agent": {
    "notify_when_agent_waiting": "never",
    "play_sound_when_agent_done": true,
    "single_file_review": true,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": { "provider": "zed.dev", "model": "claude-sonnet-4" },
    "button": false,
    "dock": "right",
    "default_width": 720
  },
  "project_panel": {
    "hide_root": true,
    "entry_spacing": "comfortable",
    "dock": "right",
    "file_icons": false,
    "folder_icons": false,
    "auto_fold_dirs": false,
    "button": false,
    "indent_guides": { "show": "never" }
  },
  "theme": { "mode": "system", "light": "One Light", "dark": "Vesper" },
  "ui_font_family": "SF Mono",
  "agent_ui_font_size": 17,
  "ui_font_size": 15,
  "buffer_font_family": "SF Mono",
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.7 },
  "tab_size": 2,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-toml", "@prettier/plugin-pug"]
  },
  "file_types": { "Dockerfile": ["containerfile"], "Elisp": ["kbd"] },
  "lsp": {
    "stylelint-lsp": { "settings": { "stylelint": { "validate": ["css", "postcss", "vue.js"] } } }
  },
  "languages": {
    "HTML": {
      "code_actions_on_format": { "source.fixAll.stylelint": true },
      "prettier": { "allowed": true }
    },
    "CSS": {
      "code_actions_on_format": { "source.fixAll.stylelint": true },
      "prettier": { "allowed": true }
    },
    "JavaScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true },
      "prettier": { "allowed": true }
    },
    "TypeScript": {
      "code_actions_on_format": { "source.fixAll.eslint": true },
      "prettier": { "allowed": true }
    },
    "Vue.js": {
      "code_actions_on_format": { "source.fixAll.stylelint": true },
      "prettier": { "allowed": true }
    },
    "Fish": { "formatter": { "external": { "command": "fish_indent", "arguments": [] } } },
    "Swift": { "formatter": { "external": { "command": "swift-format", "arguments": [] } } },
    "TOML": { "prettier": { "allowed": true, "plugins": ["prettier-plugin-toml"] } },
    "Pug": { "prettier": { "allowed": true, "plugins": ["@prettier/plugin-pug"] } },
    "JSON": { "prettier": { "allowed": true } },
    "JSONC": { "prettier": { "allowed": true } }
  },
  "debugger": { "button": false },
  "inline_code_actions": false,
  "title_bar": {
    "show_branch_icon": false,
    "show_menus": false,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_user_picture": false,
    "show_branch_name": false,
    "show_sign_in": false
  },
  "load_direnv": "shell_hook",
  "hover_popover_enabled": false,
  "show_whitespaces": "none",
  "soft_wrap": "none",
  "show_signature_help_after_edits": false,
  "search": { "button": false },
  // Deactivated panels
  "collaboration_panel": { "button": false },
  "outline_panel": { "button": false },
  "gutter": {
    "runnables": false,
    "breakpoints": false,
    "folds": false,
    "min_line_number_digits": 3
  },
  "notification_panel": { "button": false, "dock": "right" },
  "scrollbar": { "show": "system", "git_diff": false },
  "tab_bar": { "show": false, "show_nav_history_buttons": false, "show_tab_bar_buttons": false },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },
  "file_finder": { "file_icons": false, "modal_max_width": "small" },
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "git_firefly": true,
    "vue": true,
    "sql": true,
    "make": true,
    "xml": true,
    "scss": true,
    "swift": true,
    "fish": true,
    "elisp": true,
    "vesper": true,
    "pug": true,
    "stylelint": true
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.jj",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/bun.lockb",
    "**/bun.lock",
    "**/package-lock.json",
    "**/.wrangler",
    "**/.vercel",
    "**/.nuxt",
    "**/test-results",
    "**/dist",
    "**/tmp"
  ],
  "terminal": {
    "dock": "bottom",
    "line_height": "standard",
    "blinking": "on",
    "font_family": "SF Mono",
    "font_size": 13,
    "button": false,
    "detect_venv": "off"
  },
  "global_lsp_settings": { "button": false }
}
