{
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/bun.lockb",
    "**/package-lock.json",
    "**/.wrangler",
    "**/.vercel",
    "**/.nuxt"
  ],
  "centered_layout": {
    "left_padding": 0.24,
    "right_padding": 0.24
  },
  "when_closing_with_no_tabs": "keep_window_open",
  "seed_search_query_from_cursor": "selection",
  "assistant": {
    "version": "2",
    "button": false,
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    }
  },
  "project_panel": {
    "default_width": 260,
    "dock": "right",
    "file_icons": false,
    "folder_icons": false,
    "auto_reveal_entries": false,
    "auto_fold_dirs": false,
    "button": false
  },
  "tabs": {
    "git_status": true
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Vesper"
  },
  "terminal": {
    "line_height": "standard",
    "blinking": "on",
    "option_as_meta": true,
    "font_family": "SF Mono",
    "font_size": 12,
    "button": false
  },
  "ui_font_family": "SF Mono",
  "buffer_font_family": "SF Mono",

  "preferred_line_length": 100,
  "tab_size": 2,
  "prettier": {
    "allowed": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "plugins": ["prettier-plugin-toml"]
  },
  "file_types": {
    "Dockerfile": ["containerfile"]
  },
  "languages": {
    "Swift": {
      "formatter": {
        "external": {
          "command": "swift-format",
          "arguments": []
        }
      }
    },
    "TOML": {
      "prettier": {
        "allowed": true,
        "plugins": ["prettier-plugin-toml"]
      }
    },
    "Fish": {
      "formatter": {
        "external": {
          "command": "fish_indent",
          "arguments": []
        }
      }
    },
    "CSS": {
      "formatter": [
        {
          "external": {
            "command": "stylelint",
            "arguments": [
              "--config",
              "config/stylelint.js",
              "--stdin-filename",
              "{buffer_path}",
              "--fix"
            ]
          }
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    },
    "Vue.js": {
      "formatter": [
        {
          "external": {
            "command": "stylelint",
            "arguments": [
              "--config",
              "config/stylelint.js",
              "--stdin-filename",
              "{buffer_path}",
              "--fix"
            ]
          }
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    }
  },
  "jupyter": {
    "kernel_selections": {
      "typescript": "deno",
      "javascript": "deno"
    }
  },
  // Deactivated features
  // "hover_popover_enabled": false,
  "show_whitespaces": "none",
  "soft_wrap": "none",
  "show_signature_help_after_edits": false,
  // Deactivated panels
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "gutter": {
    "line_numbers": true,
    "folds": true,
    "code_actions": false,
    "runnables": false
  },
  "task": {
    "show_status_indicator": false
  },
  "notification_panel": {
    "button": false,
    "dock": "right",
    "default_width": 380
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "features": {
    "inline_completion_provider": "none" // Deactivate GitHub Copilot
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false
  }
}
