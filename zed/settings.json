{
  "auto_install_extensions": {
    "html": true,
    "dokerfile": true,
    "toml": true,
    "git_firefly": true,
    "sql": true,
    "vue": true,
    "make": true,
    "xml": true,
    "swift": true,
    "fish": true,
    "elisp": true,
    "vesper": true,
    "pug": true
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/bun.lockb",
    "**/package-lock.json",
    "**/.wrangler",
    "**/.vercel",
    "**/.nuxt",
    "**/test-results",
    "**/dist"
  ],
  "vertical_scroll_margin": 3,
  "when_closing_with_no_tabs": "keep_window_open",
  "seed_search_query_from_cursor": "selection",
  "assistant": {
    "enable_experimental_live_diffs": true,
    "version": "2",
    "button": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    }
  },
  "project_panel": {
    "default_width": 280,
    "dock": "right",
    "file_icons": false,
    "folder_icons": false,
    // "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "button": false,
    "indent_guides": {
      "show": "never"
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Vesper"
  },
  "terminal": {
    "line_height": "standard",
    "blinking": "on",
    "font_family": "SF Mono",
    "font_size": 13,
    "button": false,
    "detect_venv": "off"
  },
  "ui_font_family": "SF Mono",
  "ui_font_size": 17,
  "buffer_font_family": "SF Mono",
  "buffer_font_size": 17,
  "buffer_line_height": {
    "custom": 1.7
  },
  "preferred_line_length": 100,
  "tab_size": 2,
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "plugins": ["prettier-plugin-toml"]
  },
  "file_types": {
    "Dockerfile": ["containerfile"],
    "Elisp": ["kbd"]
  },
  // "lsp": {
  //   "biome": {
  //     "settings": {
  //       "config_path": "config/biome.json"
  //     }
  //   }
  // },
  // "code_actions_on_format": {
  //   "source.fixAll.biome": true,
  //   "source.organizeImports.biome": true
  // },
  "languages": {
    "HTML": {
      "prettier": {
        "allowed": true
      }
    },
    "JavaScript": {
      "prettier": {
        "allowed": true
      }
    },
    "TypeScript": {
      "prettier": {
        "allowed": true
      }
    },
    "JSON": {
      "prettier": {
        "allowed": true
      }
    },
    "JSONC": {
      "prettier": {
        "allowed": true
      }
    },
    "Swift": {
      "formatter": {
        "external": {
          "command": "swift-format",
          "arguments": []
        }
      }
    },
    "TOML": {
      "prettier": {
        "allowed": true,
        "plugins": ["prettier-plugin-toml"]
      }
    },
    "Fish": {
      "formatter": {
        "external": {
          "command": "fish_indent",
          "arguments": []
        }
      }
    },
    "CSS": {
      "formatter": [
        {
          "external": {
            "command": "stylelint",
            "arguments": [
              "--config",
              "config/stylelint.config.js",
              "--stdin-filename",
              "{buffer_path}",
              "--fix"
            ]
          }
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    },
    "Vue.js": {
      "formatter": [
        {
          "external": {
            "command": "stylelint",
            "arguments": [
              "--config",
              "config/stylelint.config.js",
              "--stdin-filename",
              "{buffer_path}",
              "--fix"
            ]
          }
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      ]
    }
  },
  "jupyter": {
    "kernel_selections": {
      "typescript": "deno",
      "javascript": "deno"
    }
  },
  // Deactivated features
  "show_user_picture": false,
  "load_direnv": "shell_hook",
  "hover_popover_enabled": false,
  "show_whitespaces": "none",
  "soft_wrap": "none",
  "show_signature_help_after_edits": false,
  // Deactivated panels
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "gutter": {
    "line_numbers": true,
    "folds": true,
    "code_actions": false,
    "runnables": false
  },
  "task": {
    "show_status_indicator": false
  },
  "notification_panel": {
    "button": false,
    "dock": "right",
    "default_width": 380
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "show": "system",
    "git_diff": false
  },
  "features": {
    "inline_completion_provider": "none" // Deactivate GitHub Copilot
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  },
  "file_finder": {
    "file_icons": false
  }
}
