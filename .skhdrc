# Float and center window
cmd + ctrl - t :  yabai -m window --toggle float;\
                  yabai -m window --grid 1:6:1:0:4:1
                  
cmd + ctrl - left : \
    yabai -m window --resize left:-40:0; \
    yabai -m window --resize right:-40:0
    
cmd + ctrl - right : \
    yabai -m window --resize right:40:0; \
    yabai -m window --resize left:40:0
    
cmd + ctrl - down : \
    yabai -m window --resize bottom:0:40; \
    yabai -m window --resize top:0:40

cmd + ctrl - up : \
    yabai -m window --resize top:0:-40; \
    yabai -m window --resize bottom:0:-40

cmd + ctrl - r : yabai -m space --rotate 270

cmd + ctrl - b : yabai -m space --balance

cmd + ctrl - m : yabai -m window --display recent;\
                 yabai -m space --display recent;\
                 yabai -m window --focus recent

cmd + ctrl - d : yabai -m space --display recent;\
                 yabai -m space --focus recent                 
