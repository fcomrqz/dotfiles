# Float and center window
cmd + ctrl - return :  yabai -m window --toggle float;\
                  yabai -m window --grid 1:8:2:0:4:1

cmd + ctrl - left : \
    yabai -m window --resize left:-40:0; \
    yabai -m window --resize right:-40:0

cmd + ctrl - right : \
    yabai -m window --resize right:40:0; \
    yabai -m window --resize left:40:0

cmd + ctrl - down : \
    yabai -m window --resize bottom:0:40; \
    yabai -m window --resize top:0:40

cmd + ctrl - up : \
    yabai -m window --resize top:0:-40; \
    yabai -m window --resize bottom:0:-40


cmd + ctrl - 0x2A : yabai -m window --insert stack

cmd + ctrl - 0x1E : yabai -m space --rotate 180
cmd + ctrl - 0x21 : yabai -m space --rotate 90
